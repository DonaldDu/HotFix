<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btShowSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Setting" />

    <Button
        android:id="@+id/btClearBuffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="clear buffer" />

    <Button
        android:id="@+id/btSaveFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="save file" />

    <Button
        android:id="@+id/btLoadPatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="load path" />

    <Button
        android:id="@+id/btCheckPatchVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="check patch version" />
</LinearLayout>